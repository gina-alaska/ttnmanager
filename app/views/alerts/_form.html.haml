= form_for(@alert) do |f|
  - if @alert.errors.any?
    #error_explanation
      %h2
        = pluralize(@alert.errors.count, "error")
        prohibited this alert from being saved:
      %ul
        - @alert.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :area_id
    %br/
    = f.number_field :area_id
  .field
    = f.label :text
    %br/
    = f.text_area :text
  .field
    = f.label :active
    %br/
    = f.check_box :active
  .field
    = f.label :system
    %br/
    = f.check_box :system
  .actions
    = f.submit

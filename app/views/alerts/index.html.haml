%h1 Listing alerts
%table
  %thead
    %tr
      %th Area
      %th Text
      %th Active
      %th System
      %th{:colspan => "3"}
  %tbody
    - @alerts.each do |alert|
      %tr
        %td= alert.area_id
        %td= alert.text
        %td= alert.active
        %td= alert.system
        %td= link_to 'Show', alert
        %td= link_to 'Edit', edit_alert_path(alert)
        %td= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Alert', new_alert_path

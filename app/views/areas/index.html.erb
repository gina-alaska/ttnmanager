<h1>Listing areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Travel status</th>
      <th>Snow status</th>
      <th>Soil status</th>
      <th>Geom</th>
      <th>Notes</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.travel_status %></td>
        <td><%= area.snow_status %></td>
        <td><%= area.soil_status %></td>
        <td><%= area.geom %></td>
        <td><%= area.notes %></td>
        <td><%= area.order %></td>
        <td><%= link_to 'Show', area %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


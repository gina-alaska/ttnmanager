<div class="loginform">
<h2>Log In</h2>

<%= form_tag session_path do -%>
<p><%= label_tag 'gina_username', 'Username:' %>
<%= text_field_tag 'gina_username' %></p>

<p>
  ...or use...
</p>

<p>
<label for="openid_identifier">OpenID:</label>
<%= text_field_tag "openid_identifier" %>
</p>

<p><%= submit_tag 'Log in' %></p>

<p>Don't have an account? <%= link_to 'Click here to signup', 'http://id.gina.alaska.edu/#signup', :target => '_blank' -%></p>
    
<% end -%>

</div>
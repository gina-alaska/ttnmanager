<div class="loginform">
<h2>Log In</h2>

<%= form_tag session_path do -%>
<p><%= label_tag 'gina_username', 'GINA Username:' %>
<%= text_field_tag 'gina_username' %></p>

<p>
  ...or use:
</p>

<p>
  <label for="openid_identifier">OpenID:</label>
  <%= text_field_tag "openid_identifier" %>
</p>

<p><%= submit_tag 'Log in' %></p>
<% end -%>
</div>